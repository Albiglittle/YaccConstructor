<Page x:Class="ErrorList.TestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ErrorList"      
    Title="TestPage">
    <Grid>
        <StackPanel MaxWidth="800">
            <Border MinHeight="10"/>
            <Border BorderBrush="Black" BorderThickness="1" Width="604">
                <!--<Border.BitmapEffect>
                    <DropShadowBitmapEffect ShadowDepth="5" />
                </Border.BitmapEffect>-->
                <local:ErrorListControl MinHeight="222" Height="222" Width="599" x:Name="errorList1" />
            </Border>
            <Border MinHeight="10"/>
            <Button Content="Add some entries" Click="Button_Click" />
            <Border MinHeight="10"/>
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding ElementName=errorList1, Path=ErrorsVisible}" Content="Errors Visble" />
                <CheckBox IsChecked="{Binding ElementName=errorList1, Path=WarningsVisible}" Content="Warnings Visble" />
                <CheckBox IsChecked="{Binding ElementName=errorList1, Path=MessagesVisible}" Content="Messages Visble" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
