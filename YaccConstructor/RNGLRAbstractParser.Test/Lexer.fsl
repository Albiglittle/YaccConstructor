{
module Calc.Lexer
open RNGLR.ParseCalc
open AbstractLexer.Core

}

let digit = ['0'-'9']
let whitespace = [' ' '\t' '\r' '\n']

rule token = parse
| whitespace { MULT(0) }
| ['-']? digit+ ('.'digit+)? (['e' 'E'] digit+)? { NUMBER(0) }
| '-' { MINUS(0) }
| '(' { LBRACE(0) }
| ')' { RBRACE(0) }
| '/' { DIV(0) }
| '+' { PLUS(0) }
| "**" { POW(0) }
| '*' { MULT(0) }
| eof { RNGLR_EOF (-10) }
| _ { failwithf "unexpected input: %s" <| "-" }
