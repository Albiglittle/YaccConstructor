<UserControl x:Class="Yard.Development.Tools.UIComponents.YCComponentContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="440">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28" />
            <ColumnDefinition Width="0.158*"/>
            <ColumnDefinition Width="0.281*"/>
            <ColumnDefinition Width="0.561*" />
        </Grid.ColumnDefinitions>
    	<ComboBox x:Name="cb_Component" Grid.Column="2" VerticalContentAlignment="Center"/>
    	<Label x:Name="lbl_ComponentName" Content="Label" Grid.Column="1" VerticalContentAlignment="Center"/>
    	<CheckBox x:Name="IsNeedToBeRun" Content="" Margin="8,8.04,0,8" d:LayoutOverrides="Height" Background="Black" HorizontalAlignment="Left" ToolTip="Whether this componentp should be run."/>
    	<TextBox x:Name="tb_Args" Grid.Column="3" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
