{
module Calc.Lexer
open AbstractLexer.Test.Calc.Parser
open AbstractLexer.Core

}

let digit = ['0'-'9']
let whitespace = [' ' '\t' '\r' '\n']

rule token = parse
| whitespace { None }
| ['-']? digit+ ('.'digit+)? (['e' 'E'] digit+)? { NUMBER(lexeme,brs) |> Some }
| '-' { MINUS(lexeme,brs) |> Some }
| '(' { LBRACE(lexeme,brs) |> Some }
| ')' { RBRACE(lexeme,brs) |> Some }
| '/' { DIV(lexeme,brs)|> Some }
| '+' { PLUS(lexeme,brs)|> Some }
| "**" { POW(lexeme,brs)|> Some }
| '*' { MULT(lexeme,brs)|> Some }
| eof { RNGLR_EOF ("",[||]) |> Some }
| _ { failwithf "unexpected input: %s" <| "-" }
